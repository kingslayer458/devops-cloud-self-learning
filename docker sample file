# Use official Node.js LTS image
FROM node:18

# Set working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy the rest of the app files
COPY . .

# Expose port if your app serves HTTP (e.g., 3000)
EXPOSE 3000

# Start the bot (default: start script from package.json)

CMD ["npm", "start"]
#CMD ["npm", "run", "post"]
